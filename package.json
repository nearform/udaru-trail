{
  "name": "@nearform/udaru-trail",
  "private": true,
  "version": "0.0.0",
  "description": "udaru-trail integration service",
  "license": "MIT",
  "author": "nearForm Ltd",
  "contributors": [
    "Paolo Insogna (https://github.com/ShogunPanda)"
  ],
  "homepage": "https://github.com/nearform/udaru-trail#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/udaru-trail.git"
  },
  "bugs": {
    "url": "https://github.com/nearform/udaru-trail/issues"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "main": "lib/index.js",
  "scripts": {
    "coverage": "jest -i --coverage",
    "coverage:watch": "jest -i --coverage --watch",
    "depcheck": "depcheck --ignores='husky,remark-*'",
    "doc:lint": "remark .",
    "lint": "standard",
    "sanity": "npm run doc:lint && npm run lint && npm run depcheck && npm run test",
    "test": "jest -i",
    "test:watch": "jest -i --watch"
  },
  "dependencies": {
    "@nearform/trail-core": "^1.0.1"
  },
  "devDependencies": {
    "@nearform/trail-hapi-plugin": "^1.0.1",
    "@nearform/udaru-core": "^5.1.0",
    "@nearform/udaru-hapi-plugin": "^5.2.0",
    "@nearform/udaru-hapi-server": "^5.2.0",
    "depcheck": "^0.6.9",
    "hapi": "^17.5.0",
    "husky": "^1.0.0-rc.2",
    "jest": "^22.4.3",
    "lodash": "^4.17.10",
    "luxon": "^1.2.1",
    "remark-cli": "^5.0.0",
    "remark-lint": "^6.0.1",
    "remark-preset-lint-recommended": "^3.0.1",
    "standard": "^11.0.1",
    "uuid": "^3.2.1"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  },
  "standard": {
    "ignore": [
      "docs/*"
    ],
    "globals": [
      "jest",
      "describe",
      "it",
      "skip",
      "test",
      "expect",
      "before",
      "after",
      "beforeAll",
      "afterAll",
      "beforeEach",
      "afterEach"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run sanity"
    }
  }
}
